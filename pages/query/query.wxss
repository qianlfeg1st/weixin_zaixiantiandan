.list {
  width: 96%;
  margin: 30rpx auto 0 auto;
  border: 1rpx solid #000;
}

.list__title {
  background: #fdcbc9;
}

.list__type {
  /* border: 1rpx solid #000; */
  border-left: 0;
  border-right: 0;
}

.list__type,
.list__date,
.list__phone,
.list__title {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  text-indent: 20rpx;
  border-bottom: 1rpx solid #000;
}

.input {
  width: 80%;
  height: 80rpx;
  background: #eee;
  margin: 40rpx auto 0 auto;
  border-radius: 15rpx;
  padding: 0 0 0 30rpx;
}

.inputHolder {
  width: 100%;
  font-size: 30rpx;
}