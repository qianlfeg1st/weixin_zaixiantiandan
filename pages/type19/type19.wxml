<view class="box">
  <view class="box__title">主要内容</view>
  <view class="box__wrap">
    <view class="box__input">
      <view class="box__left">执行标的</view>
      <input bindinput="actionInput" class="box__right" placeholder="写明执行标的" placeholder-class="holder" />
    </view>
    <view class="box__input">
      <view class="box__left">判决时间</view>
      <picker class="box__right" mode="date" bindchange="timeChange">
        <view>{{ more.year1 ? more.year1 + '-' + more.month1 + '-' + more.day1 : '' }}</view>
      </picker>
    </view>
    <view class="box__input">
      <view class="box__left">判决机关</view>
      <input bindinput="courtInput" class="box__right" placeholder="人民法院或其他生效法律文书的作出机关" placeholder-class="holder" />
    </view>
    <view class="box__input">
      <view class="box__left">判决书编号</view>
      <input bindinput="actionnoInput" class="box__right" placeholder="(2016)晋0802民初1163" placeholder-class="holder" />
    </view>
    <view class="box__input">
      <view class="box__left">案由</view>
      <input bindinput="casesInput" class="box__right" placeholder="写明当事人和案由" placeholder-class="holder" />
    </view>
    <view class="box__radio">
      <view class="box__left">判决裁定</view>
      <radio-group class="box__right" bindchange="actiontypeRadio" style="font-size: 25rpx;">
        <radio value="民事判决" checked="true">民事判决</radio>
        <radio value="民事裁定">民事裁定</radio>
        <radio value="民事调解书">民事调解书</radio>
      </radio-group>
    </view>
    <view class="box__input">
      <view class="box__left">判决结果</view>
      <input bindinput="actionresultInput" class="box__right" placeholder="写明判决结果" placeholder-class="holder" />
    </view>
    <view class="box__input">
      <view class="box__left">异议时间</view>
      <picker class="box__right" mode="date" bindchange="timeChange2">
        <view>{{ more.year2 ? more.year2 + '-' + more.month2 + '-' + more.day2 : '' }}</view>
      </picker>
    </view>
    <view class="box__input">
      <view class="box__left">被告(案外人)</view>
      <input bindinput="personInput" class="box__right" placeholder="" placeholder-class="holder" />
    </view>
    <view class="box__input">
      <view class="box__left">案外人执行项</view>
      <input bindinput="actionno2contentInput" class="box__right" placeholder="中止XX号XX的执行(写明案号、文书名称和执行项)" placeholder-class="holder" />
    </view>
  </view>
</view>

<view class="box">
  <view class="box__title">事实与理由</view>
  <textarea class="box__textarea" adjust-position="true" maxlength="-1" bindinput="detailsInput" />
</view>

<button class="postBtn" type="primary" bindtap="postData">提交</button>