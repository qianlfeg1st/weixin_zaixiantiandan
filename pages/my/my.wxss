.user {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 250rpx;
  /* background: #ccc; */
}

.user__face {
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
  overflow: hidden;
}

.user__nick {
  margin: 20rpx 0 0 0;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.items {
  width: 100%;
  height: 1000rpx;
  background: #eee;
  margin: 30rpx auto 0 auto;
}